<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
<header>
    <%- include('partials/header') %>
</header>

<div class="no-split">
    <div id="main">

    </div>
    <div>
        <h3>Control panel</h3>
        <form action="/accounts" method="post" class="light-border">
            <div>
                <label for="password">Password</label>
                <input class="light-border" type="password" placeholder="Enter Password" id="password" name="password" required>
                <label for="checkbox">Show Password</label>
                <input class ="checkbox" type="checkbox" id="checkbox" onclick="showPassword()">
                <label for="confirm_password">Password</label>
                <input class="light-border" type="password" placeholder="Confirm Password" id="confirm_password" required>
            </div>
            <div>
                <button class="light-border" type="submit">Update password</button>
            </div>
        </form>
        <form action="/logout?_method=DELETE" method="post">
            <button type="submit">Log out</button>
        </form>
    </div>
</div>
<footer>
    <%- include('partials/footer') %>
</footer>
</body>
<script src="./js/password.js"></script>
</html>

