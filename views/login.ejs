<!-- views/login.ejs -->

<!-- Login page -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
<header>
    <%- include('partials/header') %>
</header>

<div class="no-split panel">
    <div class="centered">
        <h3>Login</h3>
        <% if (messages.error) { %>
            <%- messages.error %>
        <% } %>
        <form action="/login" method="post" class="light-border">
            <div>
                <label for="email">Email</label>
                <input class="light-border" type="text" id="email" name="email" required>
                <label for="password">Password</label>
                <input class ="light-border" type="password" id="password" name="password" required>
                <label for="checkbox">Show Password</label>
                <input class ="checkbox" type="checkbox" id="checkbox" onclick="showPassword()">
            </div>
            <div>
                <button class="light-border" type="submit">Login</button>
            </div>
        </form>
        <a href="/register">Register</a>
    </div>
</div>
<footer>
    <%- include('partials/footer') %>
</footer>
</body>
<script src="./js/password.js"></script>
</html>